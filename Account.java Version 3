public class Account {
    private String username;
    private String password;
    private double savingsBalance;
    private double chequingBalance;

   public Account() {
        this.username = null;
        this.password = null;
        this.savingsBalance = 0.0;
        this.chequingBalance = 0.0;
    }

    public Account(String username, String password, double savingsBalance, double chequingBalance) {
        this.username = username;
        this.password = password;
        this.savingsBalance = savingsBalance;
        this.chequingBalance = chequingBalance;
    }

    // Getter methods
    public String getUsername() {
        return username;
    }

    public String getPassword() {
        return password;
    }

    public Double getSavingsBal() {

        return savingsBalance;
    }

    public Double getChequingBal() {

        return chequingBalance;
    }

    // Setter methods
    public void setUsername(String username){
       this.username = username;
    }
    public void setPassword(String password){
        this.password = password;
    }
    public void setSavingsBal(Double savingsBalance) {

        this.savingsBalance = savingsBalance;
    }

    public void setChequingBal(Double chequingBalance) {

        this.chequingBalance = chequingBalance;
    }

}
